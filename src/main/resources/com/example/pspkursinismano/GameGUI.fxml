<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pspkursinismano.GameGUI">
    <children>
      <ImageView fitHeight="395.0" fitWidth="600.0" layoutX="-2.0" layoutY="8.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../Images/conveyer.png" />
         </image>
      </ImageView>
      <Pane fx:id="paneBoxAndText" layoutX="26.0" layoutY="68.0" prefHeight="95.0" prefWidth="100.0">
         <children>
            <ImageView fx:id="crate" fitHeight="129.0" fitWidth="136.0" layoutX="-18.0" layoutY="-17.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Images/crates.png" />
               </image>
            </ImageView>
            <Text fx:id="displayBoxLetter" fill="#fffefe" layoutX="32.0" layoutY="64.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="400.0">
               <font>
                  <Font name="Bookman Old Style" size="45.0" />
               </font>
            </Text>
         </children>
      </Pane>
      <Label fx:id="scoreLabel" layoutX="14.0" layoutY="14.0" text="Score: 0" textFill="WHITE">
         <font>
            <Font name="Bookman Old Style Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="livesLabel" layoutX="14.0" layoutY="44.0" text="Lives: 3" textFill="WHITE">
         <font>
            <Font name="Bookman Old Style Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="difficultyLabel" layoutX="450.0" layoutY="14.0" text="Difficulty: Easy" textFill="WHITE">
         <font>
            <Font name="Bookman Old Style Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="selectedContainerLabel" layoutX="200.0" layoutY="360.0" text="Selected: None" textFill="WHITE">
         <font>
            <Font name="Bookman Old Style Bold" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
